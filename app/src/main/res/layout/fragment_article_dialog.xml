<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.newsTab.ArticleDialogFragment">

    <LinearLayout
        android:id="@+id/ll_dialogArticle_upperhead"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_dialogArticle_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Volanta"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="left"/>

        <TextView
            android:id="@+id/tv_dialogArticle_dateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FechaHora"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="@id/tv_dialogArticle_section"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_dialogArticle_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="8dp"
        android:text="Titulo"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_dialogArticle_upperhead" />

    <TextView
        android:id="@+id/tv_dialogArticle_drophead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:text="Copete"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogArticle_headline"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>